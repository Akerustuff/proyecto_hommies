<body class="d-flex flex-column min-vh-100">
  <div class="container">
      <div class="d-flex justify-content-center">
        <div class="user_card">
          <div class="d-flex justify-content-center">
            <div class="brand_logo_container">
              <%= image_tag 'logo_mha.png', class:"brand_logo"%>
            </div>
          </div>

          <div class="d-flex justify-content-center form_container">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="input-group mb-3">
                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                <div class="form-control input_user p-0">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'correo electrónico', class:"form-control input_user p-2 border-0" %>
                </div>
              </div>

              <div class="input-group mb-2">
                <span class="input-group-text"><i class="fas fa-key"></i></span>
                <div class="form-control input_user p-0">
                  <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Contraseña', class:"form-control input_user p-2 border-0"%>
                </div>
              </div>

              <div class="d-flex justify-content-center mt-3 login_container">
                <%= f.submit "Iniciar sesión", class:"btn btn-submit-color" %>
              </div>
            <% end %>
          </div>
          <div class="mt-4" >
            <div class="d-flex justify-content-center links">
              <span>¿No tienes cuenta?</span> <%= link_to 'Registrate', new_user_registration_path, class: 'ml-5' %>
            </div>
            <div class="d-flex justify-content-center mt-3">
            <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
          <%# <% if devise_mapping.rememberable? %>
            <%# <div class="field">
              <%= f.check_box :remember_me %>
              <%# <%= f.label :remember_me %>
            <%# </div> %>
          <%# <% end %>
  </div>
  <%= render "shared/footer" %>
</body>
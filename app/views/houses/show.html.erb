<h1><%= @house.name%></h1>

<div>
  <%= link_to 'Listado de tareas', tasks_path %>
  <div>
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Categoría</th>
        <th>Fecha límite</th>
        <th>Asignado a</th>
        <th>Creado por</th>
        <th>Fecha de finalización</th>
        <th>Fecha de aprobación</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @house_pending_tasks.each do |task| %>
        <tr>
          <td><%= task.name%></td>
          <td><%= task.description%></td>
          <td><%= task.category%></td>
          <td><%= task.limit_date%></td>
          <td><%= task.assignee%></td>
          <td><%= task.owner%></td>
          <td><%= task.finished_date%></td>
          <td><%= task.approved_date%></td>
          <td><%= task.reviewer%></td>
          <td><%= link_to 'Ver', task %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
</div>
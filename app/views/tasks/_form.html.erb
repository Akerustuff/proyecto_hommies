<%= form_with(model: @task, local: true) do |form| %>

<div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.select :category, Task.categories.keys %>
  </div>

  <div class="field">
    <%= form.label :limit_date %>
    <%= form.date_select :limit_date %>
  </div>

  <div class="field">
    <%= form.label :assignee %>
    <%= form.collection_select(:assignee_id, User.all, :id, :first_name) %>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar'%>
  </div>
<% end %>
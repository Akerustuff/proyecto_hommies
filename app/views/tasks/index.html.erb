<body class="d-flex flex-column min-vh-100">
<div class="container mb-4">

    <h1 class="mt-5 task-text">Listado de tareas</h1>
    <div class="row">
    <div class="col">
      <%= render 'tasks/search_form.html.erb' %>
    </div>
    <div class="col d-flex align-self-start justify-content-end">
      <button type="button" class="btn new-task-btn">
        <%= link_to 'Nueva tarea', new_task_path,  class:"btn px-0 " %>
      </button>
    </div>


    <div class="mt-5">
      <table class="table table-striped">
        <tr>
          <th><%= sort_link(@q, :name, "Nombre", {default_order: :asc}, {class: "sort-link-color"})%></th>
          <th>Descripci√≥n</th>
          <th>Categoria</th>
          <th>Fecha limite</th>
          <th>Fecha fin</th>
          <th>Fecha de aprobacion</th>
          <th>Asignado a</th>
          <th>Creado por</th>
          <th>Aprobado por</th>
          <th>Acciones</th>
        </tr>
        <% @tasks.each do |task|%>
          <tr>
          <td><%= task.name%></td>
          <td><%= task.description%></td>
          <td><%= task.category%></td>
          <td><%= task.limit_date%></td>
          <td><%= task.finished_date%></td>
          <td><%= task.approved_date%></td>
          <td><%= task.assignee%></td>
          <td><%= task.owner%></td>
          <td><%= task.reviewer%></td>
          <td class="actions-style"><%= link_to 'Abrir', task %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
<%= render "shared/footer" %>
</body>
<div>
  <%= image_tag(@profile.avatar_photo) %>
</div>
<div>
  <h4>nombre: <%= @profile.first_name%></h4>
</div>
<div>
  <h4>Apellido: <%= @profile.last_name%></h4>
  <div>
  <h4>Fecha de nacimiento: <%= @profile.birthdate%></h4>
</div>
</div>
<div>
  <h4>Casa: <%= @profile.house.name%></h4> 
<div>
  <%= link_to 'editar perfil', edit_user_profile_path %>
</div>

<% if @profile.owner? %>
<div>
  <h2>Miembros de la casa</h2>
</div>
<div>
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Acciones</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @house_members.each do |member| %>
        <tr>
          <td><%= member.first_name%> <%= member.last_name%></td>
          <% if member.owner? %>
          <td><%= link_to 'Cerrar casa', house_path(id: current_user.house_id), method: :delete, data: { confirm: 'Al cerrar la casa todas las tareas se borrarán y se sacará a los miembros de la casa. ¿Estás seguro de cerrar la casa?' } %><td>
          <% else %>
          <td><%= link_to 'Sacar de la casa', take_out_user_path(id: member.id), data: { confirm: '¿Estás seguro de que deseas sacar a este miembro de la casa?' } %><td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<% else %>
<div>
    <%= link_to 'Dejar casa', leave_house_path, data: { confirm: '¿Estás seguro de que deseas abandonar la casa?' } %>
</div>
<% end %>

<div>
  <h2>Mis tareas por hacer</h2>
</div>
<div>
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Categoría</th>
        <th>Fecha límite</th>
        <th>Fecha de finalización</th>
        <th>Fecha de aprobación</th>
        <th>Creada por</th>
        <th>Acciones</th>

        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @my_pending_tasks.each do |task| %>
        <tr>
          <td><%= task.name%></td>
          <td><%= task.description%></td>
          <td><%= task.category%></td>
          <td><%= task.limit_date%></td>
          <td><%= task.finished_date.nil? ? '-' : task.finished_date %></td>
          <td><%= task.approved_date.nil? ? '-' : task.approved_date%></td>
          <td><%= task.owner%></td>
          <td><%= link_to 'Ver', task %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>



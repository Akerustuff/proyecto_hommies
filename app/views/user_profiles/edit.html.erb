<body class="d-flex flex-column min-vh-100">
  <div class="container-fluid edit-photo-top">
    <h2>Edita tu foto</h2>
    <div class="mb-5">
    <% if @profile.avatar.attached?%>
              <%= image_tag(@profile.edit_avatar_photo) %>
            <% else %>
              <%= image_tag 'default_avatar.png', class:"edit_avatar_photo"%>
            <% end %>
    </div>
    <%= form_for(@profile, :url => {:action => 'update', :id => @profile.id}, :html=> {:multipart => true }) do |f| %>
      <%= render 'form_photo', user: @profile %>
    <% end %>
      <div class="mt-2">
        <%= link_to 'Regresar', user_profile_path, class:"mt-4" %>
      </div>
  </div>

  <%= render "shared/footer" %>
</body>


